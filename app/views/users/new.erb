<!-- Form to create new user -->
<!-- sends to '/users' via Post -->

<%= @error if @error %>

<h1>New User Registration Form</h1>

<form method="POST" action="/users">
  <label for="user_name_input">
  <input id="user_name_input" name="user[name]" type="text" placeholder="Your User name">
  <br>
  <label for="user_email_input">
  <input id="user_email_input" name="user[email]" type="text" placeholder="Email" required title="Please enter a valid email address.">
  <br>
  <label for="user_password_input">
  <input id="user_password_input" name="password" type="password" placeholder="Password" pattern=".{5,15}" required title="Please enter a password between 5 and 15 characters. ">
  <br>
  <input type="submit" value="Create a new player, player!">
</form>

