<!-- Form to create new user -->
<!-- sends to '/users' via Post -->

<!-- FORM NEEDS REVIEW -->

<div id="new_user_form">

<h3><%= @error_message if @error_message %></h3>

<h1>New User Registration</h1>

<form method="post" action="/users">
<input type="hidden" name="_method" value="post">
  <label for="user_email_input">
  <input id="user_email_input" name="email" type="text" placeholder="Email" required title="Please enter a valid email address.">
  <br>
  <label for="user_password_input">
  <input id="user_password_input" name="password" type="password" placeholder="Password" pattern=".{5,15}" required title="Please enter a password between 5 and 15 characters.">
  <br>
  <input type="submit" value="Create a new user!">
</form>

</div>
